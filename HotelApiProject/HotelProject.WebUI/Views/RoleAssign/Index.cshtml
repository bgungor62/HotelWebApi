@model List<UserRoleAssignList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MvcLayout/AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-body">
        <div class="active-member">
            <div class="table-responsive">
                <table class="table table-xs mb-0">
                    <thead>
                        <tr>
                            <th>Kullanıcılar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.ImageUrl == null)
                                {
                                    <td><img src="~/Images/emptyimage.png" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>

                                }
                                else
                                {
                                    <td><img src="~/Images/@item.ImageUrl" class="rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                                }
                                <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn mb-1 btn-rounded btn-outline-primary">Rol Değiştir</a></td>
                            </tr>
                            


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

