@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/MvcLayout/AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RolesName" />
            <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExists">@Model[i].RolesName</label>
        </div>
    }   
    <br />
    <button class="btn btn-success">Rolleri Güncelle</button>
</form>