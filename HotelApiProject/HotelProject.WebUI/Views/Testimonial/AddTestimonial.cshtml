@model TestimonialAddViewModel
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/MvcLayout/AdminLayout.cshtml";
}

<form method="post">
    <label>Referans Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Image</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />
    
    <button class="btn mb-1 btn-rounded btn-outline-primary">Kaydet</button>

</form>

