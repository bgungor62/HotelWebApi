@model List<ResultAppUserListWithWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MvcLayout/AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-body">
        <div class="active-member">
            <div class="table-responsive">
                <table class="table table-xs mb-0">
                    <thead>
                        <tr>
                            <th>Kullanıcılar</th>
                            <th>Ülke</th>
                            <th>Şehir</th>
                            <th>Cinsiyet</th>
                            <th>Mail</th>
                            <th>Kurum</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.ImageUrl == null)
                                {
                                    <td><img src="~/Images/emptyimage.png" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>

                                }
                                else
                                {
                                    <td><img src="~/Images/@item.ImageUrl" class="rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                                }
                                <td>@item.Country</td>
                                <td>@item.City</td>
                                @if (item.Gender == "1")
                                {
                                    <td><i class="fa fa-circle-o text-primary  mr-2"></i>Erkek</td>
                                }
                                else
                                {
                                    <td><i class="fa fa-circle-o text-purple  mr-2"></i>Kadın</td>
                                }
                                <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.Email</td>
                                <td>@item.WorkLocationName</td>
                            </tr>
                        }
                    </tbody>
                    <a href="/Register/Index/" class="btn mb-1 btn-rounded btn-outline-primary">Kullanıcı Ekle</a>
                </table>
            </div>
        </div>
    </div>
</div>


