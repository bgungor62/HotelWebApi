@model UpdateGuestDto
@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/MvcLayout/AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="GuestID" />
    <label>Müşteri Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Müşteri Soyad</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />
    <label>Müşterinin Yaşadığı Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-danger"></span>
    <br />
    <br />
    <label>Müşterinin Mail Adresi</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <span asp-validation-for="Mail" class="text-danger"></span>
    <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>

</form>





