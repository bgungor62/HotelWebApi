@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MvcLayout/AdminLayout.cshtml";
    int count = 0;
}

<a href="/Guest/CreateGuest/" class="btn mb-1 btn-rounded btn-dark">Müşteri Ekle</a>

<div class="table-responsive">
    <table class="table table-striped table-bordered zero-configuration">
        <thead>
            <tr>
                <th style="display:none;">id</th>
                <th>Sıra No</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Şehir</th>
                <th>Mail</th>
                <th>Müşteri Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td style="display:none;">@item.GuestID</td>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.City</td>
                    <td>@item.Mail</td>
                    @if (item.Status==false)
                    {
                        <td>Aktif</td>
                    }else
                    {
                          <td>Pasif</td>
                    }
                    <td><a href="/Guest/UpdateGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-info">Güncelle</a></td>

                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th style="display:none;">id</th>
                <th>Sıra No</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Şehir</th>
                <th>Mail</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
    </table>
</div>
